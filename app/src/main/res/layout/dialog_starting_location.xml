<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:text="Please select your starting location:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/starting_point_dialog_relative_1"
            style="@style/StartingPointRelativeLayout">

            <CheckBox
                android:id="@+id/starting_point_dialog_checkbox_1"
                style="@style/StartingPointCheckbox"/>

            <TextView
                android:id="@+id/starting_point_text_view_1"
                android:layout_toRightOf="@+id/starting_point_dialog_checkbox_1"
                style="@style/StartingPointTextView"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/starting_point_dialog_relative_2"
            style="@style/StartingPointRelativeLayout">

            <CheckBox
                android:id="@+id/starting_point_dialog_checkbox_2"
                style="@style/StartingPointCheckbox"/>

            <TextView
                android:id="@+id/starting_point_dialog_text_view_2"
                android:layout_toRightOf="@+id/starting_point_dialog_checkbox_2"
                style="@style/StartingPointTextView"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/starting_point_dialog_relative_3"
            style="@style/StartingPointRelativeLayout">

            <CheckBox
                android:id="@+id/starting_point_dialog_checkbox_3"
                style="@style/StartingPointCheckbox"/>

            <TextView
                android:id="@+id/starting_point_dialog_text_view_3"
                android:layout_toRightOf="@+id/starting_point_dialog_checkbox_3"
                style="@style/StartingPointTextView"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/starting_point_dialog_relative_4"
            style="@style/StartingPointRelativeLayout">

            <CheckBox
                android:id="@+id/starting_point_dialog_checkbox_4"
                style="@style/StartingPointCheckbox"/>

            <TextView
                android:id="@+id/starting_point_dialog_text_view_4"
                android:layout_toRightOf="@+id/starting_point_dialog_checkbox_4"
                style="@style/StartingPointTextView"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/starting_point_dialog_relative_5"
            style="@style/StartingPointRelativeLayout">

            <CheckBox
                android:id="@+id/starting_point_dialog_checkbox_5"
                style="@style/StartingPointCheckbox"/>

            <TextView
                android:id="@+id/starting_point_dialog_text_view_5"
                android:layout_toRightOf="@+id/starting_point_dialog_checkbox_5"
                style="@style/StartingPointTextView"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/starting_point_dialog_relative_6"
            style="@style/StartingPointRelativeLayout">

            <CheckBox
                android:id="@+id/starting_point_dialog_checkbox_6"
                style="@style/StartingPointCheckbox"/>

            <TextView
                android:id="@+id/starting_point_dialog_text_view_6"
                style="@style/StartingPointTextView"
                android:layout_toRightOf="@+id/starting_point_dialog_checkbox_6"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_gravity="right"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/starting_point_dialog_done_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="DONE"
                android:letterSpacing="0.03"
                android:layout_alignParentRight="true" />


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>